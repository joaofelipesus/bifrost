<div class="w-full">
  <div class="mx-auto">

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @env_variable %>

    <div>
      <%= link_to "Edit this env variable", edit_env_variable_path(@env_variable), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %> |
      <%= link_to "Back to env variables", env_variables_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

      <%= button_to "Destroy this env variable", @env_variable, method: :delete %>
    </div>
  </div>
</div>
